                           <HBox prefHeight="75.0" prefWidth="200.0" spacing="20.0">
                              <padding>
                                 <Insets bottom="20.0" top="20.0" />
                              </padding></HBox>
                        </children>
                        <padding>
                           <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                        </padding></VBox>
						</children>
					</AnchorPane>
				</content>
			</ScrollPane>
			<TextArea id="messageField" fx:id="messageField" layoutX="77.0" layoutY="583.0" prefHeight="50.0" prefWidth="587.0" promptText="Type your message...." />

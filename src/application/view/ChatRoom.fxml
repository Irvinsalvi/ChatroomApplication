                                    </opaqueInsets></VBox>
										</children>
										<cursor>
											<Cursor fx:constant="DEFAULT" />
										</cursor>
									</AnchorPane>
								</content>
							</ScrollPane>
						</children>
					</VBox>
				</children>
			</HBox>
		</children>
	</AnchorPane>
